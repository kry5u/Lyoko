@page
@model LoginModel

@{
    ViewData["Title"] = "Zaloguj się";
}


<section class="level-list">
    <form id="account" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div>
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="nazwa@przykład.domena" />
            <label asp-for="Input.Email" class="form-label">Email</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div>
            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="hasło" />
            <label asp-for="Input.Password" class="form-label">Hasło</label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Input.RememberMe" class="form-label">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                @Html.DisplayNameFor(m => m.Input.RememberMe)
            </label>
        </div>
        <a href="#" class="link" onclick="this.closest('form').submit()">
            Zaloguj się
        </a>
    </form>
</section>

